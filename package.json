{
  "name": "slidev-copilot",
  "displayName": "Slidev Copilot",
  "description": "Generate Slidev presentations from chat contexts",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other",
    "Chat",
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "slidev-copilot",
        "fullName": "Slidev Copilot",
        "name": "slidev",
        "description": "Generate Slidev presentations from chat contexts",
        "isSticky": true,
        "commands": [
          {
            "name": "generateSlidevMarkdown",
            "description": "Generate a Slidev markdown presentation"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.23"
  }
}
