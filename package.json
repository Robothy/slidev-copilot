{
  "name": "slidev-copilot",
  "displayName": "Slidev Copilot",
  "description": "Generate Slidev presentations from chat contexts",
  "version": "0.1.0",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/robothy/slidev-copilot"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other",
    "Chat",
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:chat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "slidev-copilot",
        "fullName": "Slidev Copilot",
        "name": "slidev",
        "description": "Generate a Slidev presentation from chat contexts",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack-prod",
    "compile": "tsc -p ./",
    "compile:test": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile:test",
    "lint": "eslint src --fix --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package --out out",
    "webpack": "webpack --mode development",
    "webpack-prod": "webpack --mode production",
    "webpack-dev": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/react": "^19.1.1",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "react": "^19.1.0",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "typescript": "^5.1.3",
    "vitest": "^1.2.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.23"
  },
  "bundledDependencies": [
    "@vscode/prompt-tsx"
  ]
}
